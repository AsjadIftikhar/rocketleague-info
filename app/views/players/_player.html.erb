<div id="<%= dom_id player %>" class="w-1/2 bg-gray-100 px-4 py-2 my-4 rounded-lg shadow">
  <p class="my-4 flex">
    <strong class="block font-bold mb-1 pr-4">Name:</strong>
    <%= player.name %>
  </p>

  <p class="my-4 flex">
    <strong class="block font-bold mb-1 pr-4">Age:</strong>
    <%= player.age %>
  </p>

  <p class="my-4 flex">
    <strong class="block font-bold mb-1 pr-4">Country:</strong>
    <%= player.country %>
  </p>

  <p class="my-4 flex">
    <strong class="block font-bold mb-1 pr-4">Team:</strong>
    <%= player.team.name %>
  </p>

  <% if action_name != "show" and can? :manage, @player%>
    <div class="flex space-x-4 mt-4">
      <%= link_to 'Edit', edit_player_path(player), class: "rounded-lg m-2 px-2 bg-blue-800 inline-block font-light text-white shadow" %>
      <%= button_to "Delete", { :controller => :players, :action => 'destroy', :id => player.id }, :method => :delete, class: "px-2 rounded text-white bg-red-500 shadow" %>
    </div>
<% end %>
</div>
