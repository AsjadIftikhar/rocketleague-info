<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Players</h1>
    <% if can? :manage, @player %>
      <%= link_to 'New player', new_player_path, class: "rounded-lg py-2 px-4 bg-blue-500 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="players" class="min-w-full my-6">
    <%#= render @players %>
    <div class="pb-4 flex space-x-4 bg-white dark:bg-gray-900">
      <div class="relative mt-1">
        <%= form_tag players_path, role: "search", method: :get do |f|%>
          <%= text_field_tag :q, params[:q], placeholder: 'Search...' ,class: "block p-2 w-80 text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        <% end %>
      </div>
      <span class="mt-2 font-bold">Search</span>
    </div>


    <div class="overflow-x-auto relative">
      <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xs text-gray-700 uppercase bg-blue-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <th scope="col" class="py-3 px-6">
            Name
          </th>
          <th scope="col" class="py-3 px-6">
            Age
          </th>
          <th scope="col" class="py-3 px-6">
            Country
          </th>
          <th scope="col" class="py-3 px-6">
            Team
          </th>
          <% if action_name != "show" and can? :manage, @player%>
            <th scope="col" class="py-3 px-6">
              Modify
            </th>
          <% end %>

        </tr>
        </thead>
        <tbody>
        <% @players.each do |player| %>
          <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
            <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white">
              <%= player.name %>
            </th>
            <td class="py-4 px-6">
              <%= player.age %>
            </td>
            <td class="py-4 px-6">
              <%= player.country %>
            </td>
            <td class="py-4 px-6">
              <%= player.team.name %>
            </td>
            <% if action_name != "show" and can? :manage, @player%>
              <td class="py-4 px-6">
                <div class="flex space-x-4">
                  <%= link_to 'Edit', edit_player_path(player), class: "rounded-lg m-2 px-2 bg-blue-800 inline-block font-light text-white shadow" %>
                  <%= button_to "Delete", { :controller => :players, :action => 'destroy', :id => player.id }, :method => :delete, class: "px-2 m-2 rounded text-white bg-red-500 shadow" %>
                </div>
              </td>
            <% end %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
