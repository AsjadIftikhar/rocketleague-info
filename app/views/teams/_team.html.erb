<div id="<%= dom_id team %>">
  <p class="my-4 text-blue-700 text-xl px-2">
    <%= link_to team.name, team, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </p>

  <% if can? :manage, team %>
    <%#= link_to "Show this team", team, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit', edit_team_path(team), class: "rounded-lg py-2 ml-2 px-4 bg-green-500 text-white inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete', team_path(team), method: :delete, class: "mt-2 text-white rounded-lg py-2 px-4 bg-red-500 font-medium" %>
    </div>
    <hr class="mt-6">
  <% end %>
</div>
