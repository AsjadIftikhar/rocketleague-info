<div class="my-4 max-w-sm bg-white rounded-lg border border-gray-200 shadow-lg">
  <a href="/teams/<%=team.id %>">
    <%#= image_tag(team.avatar) %>
    <% if team.banner.attached? %>
      <%= image_tag(team.banner) %>
    <% end %>
<!--    <img class="rounded-t-lg" src="<%#= url_for(team.avatar) %>" alt="Team Picture">-->
  </a>
  <div class="p-4">
    <p class="my-4 text-blue-700 text-xl">
      <%= link_to team.name, team, class: "mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white" %>
    </p>

    <% if can? :manage, team %>
      <%= link_to 'Edit', edit_team_path(team), class: "rounded-lg m-2 px-2 bg-blue-800 inline-block font-light text-white shadow" %>
      <div class="inline-block ml-2">
        <%= button_to 'Delete', team_path(team), method: :delete, class: "px-2 rounded text-white bg-red-500 shadow" %>
      </div>
    <% end %>
  </div>
</div>
