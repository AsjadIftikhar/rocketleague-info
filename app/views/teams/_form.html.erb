<%= form_with(model: team, class: "contents") do |form| %>
  <% if team.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-8 px-2 space-y-4">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="py-2 space-y-4">
    <%= form.label :banner, class: "text-gray-600" %><br />
    <%= form.file_field :banner %>
    <%#= form.fields_for :display_pictures do |d| %>
    <%#= d.file_field :avatar%>
    <%# end %>
  </div>

  <div>
    <%= form.submit class: "rounded-lg mt-4 p-4 bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
