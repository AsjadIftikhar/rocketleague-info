<h1 class="pb-8 text-4xl font-medium text-gray-700">Tournaments</h1>

<% if can? :manage, @tournament %>
  <%= link_to "New Tournament", new_tournament_path, class: "bg-blue-500 text-white p-2 my-4 rounded-lg" %>
<% end %>
<div class="mt-4 space-x-4 space-y-4 grid grid-cols-3">
  <% @tournaments.each do |tournament| %>
    <div class="p-6 bg-white rounded-lg border border-gray-200 shadow-md ">
      <h5 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white"><%= tournament.title %></h5>
      <p class="mb-3 font-normal text-gray-500 dark:text-gray-400"><%= tournament.location %> | <%= tournament.start_date %> to <%= tournament.end_date %></p>
      <a href="/news" class="pr-4 inline-flex items-center text-blue-600 hover:underline">
        News
        <svg class="ml-2 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"></path><path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"></path></svg>
      </a>
      <% if can? :manage, tournament %>
        <div class="flex space-x-4 mt-4">
          <%= link_to "Edit", edit_tournament_path(tournament), class: "px-2 rounded text-white bg-blue-800" %>
          <%= button_to "Delete", { :controller => :tournaments, :action => 'destroy', :id => tournament.id }, :method => :delete, class: "px-2 rounded text-white bg-red-500" %>
        </div>
      <% end %>

    </div>
  <% end %>
</div>
