<%= form_for @tournament do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @tournament.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :location %><br>
    <%= form.text_field :location %><br>
    <% @tournament.errors.full_messages_for(:location).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :start_date %><br>
    <%= form.date_select :start_date %><br>
    <% @tournament.errors.full_messages_for(:start_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :end_date %><br>
    <%= form.date_select :end_date %><br>
    <% @tournament.errors.full_messages_for(:end_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="my-4 flex text-blue-500 hover:text-blue-600">
    <%= form.submit %>
  </div>
<% end %>